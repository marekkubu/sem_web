<div class = 'container'>
        <h1> Nový článek </h1>
        <form class='form-horizontal' id = 'naform' method = 'post' enctype='multipart/form-data'>
          <div class='form-group'>
            <label class='control-label col-sm-2' for='aname'>Název</label>
            <div class='col-sm-10'>
              <input type='text' class='form-control' id='aname' placeholder='Vložte název' name='userdata[name]'>
            </div>
          </div>
          <div class='form-group'>
          </div>
          <div class='form-group'>
            <label class='control-label col-sm-2' for='abstract'>Abstrakt:</label>
            <div class='col-sm-10'>
              <textarea form='naform'  class='form-control' id='abstract' placeholder='Zde napište abstrakt' name='userdata[abstract]'></textarea>
            </div>
          </div>
          <div class='form-group'>
            <label class='control-label col-sm-2' for='userfile'>PDF soubor:</label>
            <div class='col-sm-10'>
              <input type='file' class='form-control' id='userfile' name ='userfile'>
            </div>
          </div>
          <div class='form-group'>
            <div class='col-sm-2'>
              <input type='submit' class='form-control' name = 'upload'>
            </div>
          </div>
        </form>
    </div>
